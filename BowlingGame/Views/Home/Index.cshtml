@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/bowlingGame.js?v=1.18.22"></script>
<!-- Button trigger modal -->
<div class="form-group row">
    <div class="col">
        <table class="table" id="tblGameList">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Player Name</th>
                    <th>Score</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<button class="btn btn-primary" onclick="showNewBowlingGame()">New Game</button>

<div class="form-group row">
    <div class="col">
        <table class="table table-bordered" id="tblGameInformation">
            <thead class="table-dark">
                <tr>
                    <th scope="col" style="text-align:center">Frames  </th>
                    <th scope="col" colspan="2" style="text-align:center">1 </th>
                    <th scope="col" colspan="2" style="text-align:center">2 </th>
                    <th scope="col" colspan="2" style="text-align:center">3 </th>
                    <th scope="col" colspan="2" style="text-align:center">4 </th>
                    <th scope="col" colspan="2" style="text-align:center">5 </th>
                    <th scope="col" colspan="2" style="text-align:center">6 </th>
                    <th scope="col" colspan="2" style="text-align:center">7 </th>
                    <th scope="col" colspan="2" style="text-align:center">8</th>
                    <th scope="col" colspan="2" style="text-align:center">9</th>
                    <th scope="col" colspan="3" style="text-align:center">10</th>
                    <th scope="col" style="text-align:center">Total  </th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>Scores</td>
                    <td>5</td>
                    <td>/</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>X</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>5</td>
                    <td>X</td>
                    <td>X</td>
                    <td rowspan="2"> </td>
                </tr>
                <tr>
                    <td rowspan="3">Final</td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="2"></td>
                    <td colspan="3"></td>
                    
                </tr>
               
            </tbody>
        </table>
    </div>
</div>
<div class="form-group row">
    <div class="col">
        <button class="btn btn-primary">
            Bowl
        </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="mdlNewBowlingGame" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblNewGameTitle">New Game</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col">
                        <label id="lblNewGamePerson">Name</label>
                        <input id="txtNewGameName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="createBowlingGame()">Create Game</button>
            </div>
        </div>
    </div>
</div>