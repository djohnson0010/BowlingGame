@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/bowlingGame.js?v=1.18.22"></script>
<!-- Button trigger modal -->
<div class="form-group row">
    <div class="col">
        <table class="table" id="tblGameList">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Player Name</th>
                    <th>Score</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<button class="btn btn-primary" onclick="showNewBowlingGame()">New Game</button>

<div class="form-group row">
    <div class="col">
        <table class="table table-bordered" id="tblGameInformation">
            <thead class="table-dark">
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<br />
<div class="form-group row">
    <div class="col">

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="mdlNewBowlingGame" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblNewGameTitle">New Game</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col">
                        <label id="lblNewGamePerson">Name</label>
                        <input id="txtNewGameName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="createBowlingGame()">Create Game</button>
            </div>
        </div>
    </div>
</div>